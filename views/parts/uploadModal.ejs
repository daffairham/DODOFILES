<div class="modal-content bg-white rounded-lg p-8 md:flex flex-col">
  <span class="text-center mb-4">Upload file</span>
  <form id="uploadForm" hx-post="/upload" hx-encoding="multipart/form-data" hx-target="#content" class="flex flex-col gap-2" onsubmit="closeModal()">
    <input type="file" name="file" id="file" required/>
    <input type="submit" value="Upload" class="bg-gray-500 hover:bg-gray-700 cursor-pointer text-white font-bold py-2 px-4 rounded"/>
  </form>
</div>
