<div id="move-file-modal<%= index %>" class="modal hidden fixed inset-0 z-50 overflow-auto bg-black bg-opacity-50 flex justify-center items-center">
    <div class="modal-content bg-white rounded-lg p-8 md:flex flex-col w-1/4">
        <div class="flex justify-between items-center mb-4">
            <span class="text-center">Move <%= file.file_name %></span>
            <button class="text-2xl" onclick="closeMoveFileModal(<%= index %>)">&times;</button>
          </div>
      <form id="uploadForm" hx-post="/moveFile" hx-target="#content" class="flex flex-col gap-2"
        onsubmit="closeMoveFileModal(<%= index %>)">
        <label for="foldernames" class="mb-4">Select a folder to move your file: </label>
        <select name="foldernames" id="foldernames" class="mb-8 border-2 rounded-md p-2 border-gray-500">
            <option value="11">1</option>
            <option value="">2</option>
            <option value="">3</option>
            <option value="">4</option>
            <option value="">5</option>
        </select>
        <input type="submit"
          class="bg-gray-500 hover:bg-gray-700 cursor-pointer text-white font-bold py-2 px-4 rounded" />
      </form>
    </div>
  </div>