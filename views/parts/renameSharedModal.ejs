<div id="renameshared-modal<%= index %>" class="modal hidden fixed inset-0 z-50 overflow-auto bg-black bg-opacity-50 flex justify-center items-center">
    <div class="modal-content bg-white rounded-lg p-8 md:flex flex-col w-1/4">
      <div class="flex justify-between items-center mb-4">
        <span class="text-center text-[#0CC0DF]">Rename <span class="font-semibold"><%= file.file_name %></span></span>
        <button class="text-2xl" onclick="closeRenameSharedModal(<%= index %>)">&times;</button>
      </div>
      <form id="uploadForm" hx-post="/renameSharedFile" hx-target="#content" class="flex flex-col gap-2"
        onsubmit="closeRenameSharedModal(<%= index %>)" hx-vals='{"fileid": "<%= file.file_id %>"}'>
        <input type="text" value="<%= file.file_name %>" name="newName" id="newName" class="p-2 border-[1px] border-[#0CC0DF] bg-white rounded-md">
        <div class="md:flex items-center justify-center mt-4">
          <input type="submit" value="Rename"
            class="bg-[#0CC0DF] hover:bg-[#36b3c9] cursor-pointer text-white font-light text-lg py-2 px-6  rounded" />
        </div>
      </form>
    </div>
  </div>