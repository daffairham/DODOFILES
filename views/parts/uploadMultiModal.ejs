<div class="modal-content bg-white rounded-lg p-8 md:flex flex-col">
    <div id="file-modal">
      <span class="text-center text-[#0CC0DF] ml-2 mb-6 font-medium text-lg">Add multiple files</span>
      <form id="uploadForm" hx-post="/uploadMultiple" hx-encoding="multipart/form-data" hx-target="#content"
        class="flex flex-col items-center gap-2 mt-2" onsubmit="closeUploadMultiModal()" hx-vals='{"folderId": "<%= folderId %>"}'>
        <input type="file" multiple name="file" id="file" required class="ml-2 mb-4 text-[#A2A6AD]" />
        <div class="md:flex items-center justify-center">
          <input type="submit" value="Upload"
            class="bg-[#0CC0DF] hover:bg-[#36b3c9] cursor-pointer text-white font-light text-lg py-4 px-8  rounded" />
        </div>
      </form>
    </div>
  </div>