<div id="share-file-modal<%= index %>" class="modal hidden fixed inset-0 z-50 overflow-auto bg-black bg-opacity-50 flex justify-center items-center">
    <div class="modal-content bg-white rounded-lg p-8 md:flex flex-col w-1/4">
        <div class="flex justify-between items-center mb-4">
            <span class="text-center">Share <span class="font-bold"><%= file.file_name %></span></span>
            <button class="text-2xl" onclick="closeShareFileModal(<%= index %>)">&times;</button>
          </div>
      <form id="shareFileForm" hx-post="/share" hx-vals='{"entityid": "<%= file.file_id %>"}' class="flex flex-col gap-2"
        onsubmit="closeShareFileModal(<%= index %>)" hx-target=".file-item<%= index %>" hx-swap="outerHTML swap:0.5s">
        <label for="email" class="mt-4">Input email of the user that you want this file to share to: </label>
        <input type="email" name="email" id="email" placeholder="Input email here.." class="border-gray-500 border-2 p-2 rounded-md" required>
        <label for="permission" class="mt-4">User access: </label>
        <select class="border-gray-500 border-2 p-2 rounded-md" name="permission" id="permission">
          <option value="1">Can only view</option>
          <option value="2">Can edit</option>
        </select>
        <input type="submit" value="Share this file"
          class="bg-gray-500 hover:bg-gray-700 cursor-pointer text-white font-bold py-2 px-4 rounded mt-4" />
      </form>
    </div>
  </div>